{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for NUXP Shell",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-remove",
    "fs:allow-exists",
    "fs:allow-mkdir",
    {
      "identifier": "fs:allow-write",
      "allow": [{ "path": "$APPDATA/nuxp/**" }]
    },
    {
      "identifier": "fs:allow-read",
      "allow": [{ "path": "$APPDATA/nuxp/**" }]
    },
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$APPDATA/nuxp/**" }]
    }
  ]
}
